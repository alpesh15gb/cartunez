# ===========================================
# Car Tunez Production Environment Variables
# ===========================================
# IMPORTANT: Copy this file to .env.prod and fill in real values
# Never commit .env.prod to version control!

# Domain
DOMAIN=cartunez.in

# Database
POSTGRES_USER=cartunez
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123
POSTGRES_DB=cartunez

# Redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456

# Meilisearch
MEILI_MASTER_KEY=CHANGE_THIS_MEILI_MASTER_KEY_789

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=cartunez_admin
MINIO_ROOT_PASSWORD=CHANGE_THIS_MINIO_PASSWORD_ABC

# JWT & Cookies
JWT_SECRET=GENERATE_A_RANDOM_64_CHAR_STRING_FOR_JWT
COOKIE_SECRET=GENERATE_A_RANDOM_64_CHAR_STRING_FOR_COOKIES

# Razorpay Payment Gateway
# Get these from https://dashboard.razorpay.com
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# MSG91 SMS/OTP
# Get these from https://msg91.com
MSG91_AUTH_KEY=your_msg91_auth_key
MSG91_SENDER_ID=CARTUN
MSG91_TEMPLATE_ID=your_template_id

# Shiprocket (Optional - for shipping)
# SHIPROCKET_EMAIL=your_email
# SHIPROCKET_PASSWORD=your_password

# Sentry (Optional - for error tracking)
# SENTRY_DSN=https://xxx@sentry.io/xxx
