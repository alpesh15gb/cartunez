<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="css/styles-m.css"/>
        <css src="css/styles-l.css"/>
        <link src="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&amp;family=Roboto:wght@300;400;700&amp;display=swap" src_type="url"/>
    </head>
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_img_width" xsi:type="number">200</argument>
                <argument name="logo_img_height" xsi:type="number">50</argument>
                <argument name="logo_alt" xsi:type="string">Car Tunez</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="header.container">
            <container name="header.panel.wrapper" htmlClass="header panel wrapper" htmlTag="div" before="-">
                <!-- Custom darker header structure if needed -->
            </container>
        </referenceContainer>
    </body>
</page>
